<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity"
    android:background="@drawable/background"
    android:animateLayoutChanges="true">
    <TextView
        android:text="Этап 1"
        android:textSize="25sp"
        android:fontFamily="@font/mont"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/etap"
        android:paddingTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/property_1_volume"
        />
    <TextView
        android:text="30"
        android:textSize="24sp"
        android:fontFamily="@font/mont"
        android:textColor="@color/orange"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/property_1_volume"
        android:paddingTop="15dp"
        android:paddingStart="15dp"/>

    <ImageView
        android:id="@+id/apple"
        android:paddingTop="15dp"
        android:paddingEnd="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/apple_2"/>

    <TextView
        android:id="@+id/textscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/apple"
        android:text="100"
        android:textSize="24sp"
        android:fontFamily="@font/mont"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toTopOf="@id/apple"
        app:layout_constraintBottom_toBottomOf="@id/apple"
        android:textColor="@color/orange"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/etap"
        app:layout_constraintEnd_toEndOf="@id/etap"
        app:layout_constraintTop_toBottomOf="@id/etap"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/first"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ellipse_1"/>
        <ImageView
            android:id="@+id/second"
            android:layout_marginStart="10dp"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ellipse_2"/>
        <ImageView
            android:id="@+id/third"
            android:layout_marginStart="10dp"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ellipse_2"/>
        <ImageView
            android:id="@+id/four"
            android:layout_marginStart="10dp"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ellipse_2"/>
        <ImageView
            android:id="@+id/five"
            android:layout_marginStart="10dp"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ellipse_2"/>
    </LinearLayout>

    <!--Отрисовка клинка-->
    <ImageView
        android:id="@+id/needle1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/knife_main"
        android:visibility="invisible"/>


    <!--Конейнер клинков-->
    <FrameLayout
        android:id="@+id/container"
        android:foregroundGravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        >

        <RelativeLayout
            android:id="@+id/ballContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="visible">

            <ImageView
                android:id="@+id/ballimg_part1"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@drawable/mask_group" />

            <ImageView
                android:id="@+id/ballimg_part2"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@drawable/mask_group__3_" />

            <ImageView
                android:id="@+id/ballimg"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@drawable/tree_cutting"
                android:visibility="visible" />
        </RelativeLayout>
    </FrameLayout>

    <!--Мяч-->

    <!--Gui-->




    <!--Темный фон-->
    <LinearLayout
        android:id="@+id/llBlack"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#90000000"
        android:gravity="center"
        android:clickable="true"
        android:orientation="horizontal"
        tools:visibility="gone">
    </LinearLayout>

    <TextView
        android:id="@+id/tvLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mont"
        android:text="Loading..."
        android:textSize="25sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone"/>

    <View
        android:id="@+id/emit"
        android:layout_width="1dp"
        android:layout_height="19dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--Меню -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/llMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/shape"
        android:visibility="gone">
        <TextView
            android:id="@+id/tvLost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/allerta"
            android:text="You Lost"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/btRestart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvLost">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:fontFamily="@font/allerta"
                android:text="Restart"
                style="@style/textColor"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:gravity="center"
            android:layout_marginBottom="15dp"
            android:background="@drawable/button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btRestart">

            <TextView
                android:id="@+id/tvBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:fontFamily="@font/allerta"
                android:text="Back"
                android:clickable="false"
                style="@style/textColor"
                android:textSize="18sp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:id="@+id/life1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/knife_one__1_"/>
    <ImageView
        android:id="@+id/life2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/life1"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/knife_one__1_"/>
    <ImageView
        android:id="@+id/life3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/life2"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/knife_one__1_"/>
    <ImageView
        android:id="@+id/life4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/life3"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/knife_one__1_"/>

    <ImageView
        android:id="@+id/life5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/life4"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/knife_one__1_"/>

</androidx.constraintlayout.widget.ConstraintLayout>